  <PropertyGroup>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
  </PropertyGroup>
  
  <ItemGroup>
<!--    <PackageReference Include="ILRepack" Version="2.0.18" />-->

  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="$(OutputPath)\..\haptics.json" LogicalName="$(TargetName).haptics.json" />
  </ItemGroup>
  <PropertyGroup>
    <PreBuildEvent>python "$(SolutionDir)/helperTools/bundle_effects.py" "$(SolutionDir)/BhapticsPopOne/Assets/Effects" "$(OutputPath)/haptics.json"</PreBuildEvent>
  </PropertyGroup>
